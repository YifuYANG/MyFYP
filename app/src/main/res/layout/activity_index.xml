<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity">

    <fragment
        android:layout_width="410dp"
        android:layout_height="400dp"
        android:id="@+id/map"
        tools:context=".IndexActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />


    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="400dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Current Speed:"
        />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="400dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="50"
        />



    <Button
        android:id="@+id/idofdevice"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Over Take"
        android:textAllCaps="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/msg"/>

    <Button
        android:id="@+id/acquireinfo"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="traffic info"
        android:textAllCaps="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:layout_below="@+id/idofdevice"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/acquirepatientinfo"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="patient info"
        android:textAllCaps="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:layout_below="@+id/acquireinfo"
        android:layout_marginTop="10dp"/>


</RelativeLayout>